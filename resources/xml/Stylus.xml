<?xml version="1.0" encoding="utf-8"?>
<messages>
    <message id="stylus.edditor.titlebar">
        <div class="flex items-center px-2 space-x-2 "> ${remove class="m-0 btn
            btn-danger"} <div class="border-l-2 border-solid ps-2 space-y-2">
                ${add-child-before class="m-0 btn btn-success"}
                ${add-child-after class="m-0 btn btn-success"}
            </div>
            <div class="border-l-2 border-solid ps-2 space-y-2">
                ${add-sibling-before class="m-0 me-2 btn btn-dark"}
                ${add-sibling-after class="m-0 me-4 btn btn-dark"}
            </div>
            <div class="self-stretch border border-solid ms-0 "/>
            <div class="relative inline-flex flex-col self-start ">
                <div class="font-bold tracking-widest text-center ">Outline</div> ${<parent>}
                    ${outline-parent-checkbox class=""}
                    ${</parent>} ${outline-selected-checkbox class=""} </div>
            <div class="self-stretch border border-solid"/>
            <div class="relative self-start flex flex-col">
                <div class="font-bold tracking-widest text-center ">togglers</div>
                <div class="flex">
                    <div class="flex flex-col ">
                        ${display-default-checkbox class="text-xs "}
                        ${display-default-hover-checkbox class="text-xs "}
                    </div>
                    <div class="self-stretch border border-solid mx-2"/>
                    <div class="flex flex-col justify-stretch">
                        ${display-dark-checkbox class="text-xs "}
                        ${display-dark-hover-checkbox class="text-xs "}
                    </div>
                    <div class="self-stretch border border-solid mx-2"/>
                    ${display-text-content-checkbox class="text-xs "} </div>
            </div>
        </div>
    </message>
    <message id="stylus.edditor.content">
        <div class="flex max-w-[100vw] min-w-[200px] pe-3"> ${tree-view class="max-w-[150px]
            min-w-[150px]"} <div class="flex min-h-[400px] items-stretch w-full"><div>
            ${default-styles-display class="h-1/2 mb-6"}
                    ${default-hover-styles-display class="h-1/2"}
                </div>
                <div>
            ${dark-styles-display class="h-1/2 mb-6 "}
                    ${dark-hover-styles-display class="h-1/2 "}
                </div>
            ${text-content-display class="relative w-full"} </div>
        </div>
    </message>
    <message id="stylus.edditor.content.display">
        <div class="text-center">${title}</div> ${text-display class="h-full"} </message>
    <message id="stylus.sidebar.titlebar">
        <div class="relative">${stylus}</div>
        <div class="">${svg.plus class="btn p-1 m-1"}</div>
    </message>
    <message id="stylus.sidebar.content">
        <div class="relative">${stylus}</div>
        <div class=""></div>
        <div class="">${container.wt class="p-0"}</div>
    </message>
    <message id="stylus.sidebar.folder.item">
        <div class="-mx-2">
            <div class="flex items-center">${svg.trash class="btn btn-danmger p-1 m-1"}
            ${title}
            ${svg.pencil class="btn p-1 m-1 ms-auto"}</div>
        </div>
    </message>
    <message id="stylus.edditor.class.view">
        <div class="">${stylus}</div>
        <div class="bg-yellow-100 p-3">${stylus.class.padding}</div>
    </message>
    <message id="stylus2.edditor">
        <div class="flex items-center justify-between border-b border-solid">
            ${move-left-btn class="bg-[url(left-arrow-square.svg)] !p-3 rounded-none !m-0 bg-cover"}
            ${refresh-btn class="bg-[url(refresh.svg)] !p-3 rounded-full !m-0 bg-cover !ms-auto"}
            ${move-right-btn class="bg-[url(right-arrow-square.svg)] !p-3 rounded-none !m-0 bg-cover"}
        </div>
        <div class="min-h-[200px] overflow-auto border-b border-solid resize-y">
            ${tree-view class=""}
        </div>
        <div class="">
            ${stylus2.edditor.margin.padding class="px-6"}
        </div>
    </message>
    <message id="stylus2.edditor.margin.padding">
        <div class="w-full mb-4 text-xs flex flex-col items-center">
            <div class="mb-2 self-stretch">
                <div class="flex justify-between">
                    <div class="font-bold ms-5">Margin</div>
                    <div class="font-bold me-5">Padding</div>
                </div>
                <div class="relative flex justify-between">
                    <div class="flex w-fit rounded-md border bg-gray-50">
                        ${margin.all.control class="flex items-stretch justify-center"}
                    </div>
                    <div class="font-bold">All sides</div>
                    <div class="flex w-fit rounded-md border bg-gray-50">
                        ${padding.all.control class="flex items-stretch justify-center"}
                    </div>
                </div>
                <div class="relative mt-1 flex justify-between">
                    <div class="flex w-fit rounded-md border bg-gray-50">
                        ${margin.vertical.control class="flex items-stretch justify-center"}
                    </div>
                    <div class="font-bold">Vertical</div>
                    <div class="flex w-fit rounded-md border bg-gray-50">
                        ${padding.vertical.control class="flex items-stretch justify-center"}
                    </div>
                </div>
                <div class="relative mt-1 flex justify-between">
                    <div class="flex w-fit rounded-md border bg-gray-50">
                        ${margin.horizontal.control class="flex items-stretch justify-center"}
                    </div>
                    <div class="font-bold">Horizontal</div>
                    <div class="flex w-fit rounded-md border bg-gray-50">
                        ${padding.horizontal.control class="flex items-stretch justify-center"}
                    </div>
                </div>
            </div>
            <div class="p-px w-fit">
                <div class="h-[130px] w-[200px] pt-3 pb-4">
                    <div class="relative h-full w-full border-[5px] border-dashed border-gray-400 flex flex-col justify-between items-stretch">
                        <div class="flex flex-col w-fit mx-auto -mt-7">
                            <div class="flex rounded-md border bg-gray-50 mb-1">
                                ${margin.top.control class="flex justify-center"}
                            </div>
                            <div class="flex rounded-md border bg-gray-50">
                                ${padding.top.control class="flex justify-center"}
                            </div>
                        </div>
                        <div class="-mx-12 flex justify-between">
                            <div class="flex rounded-md border bg-gray-50">
                                ${margin.right.control class="flex justify-center"}
                            </div>
                            <div class="flex rounded-md border bg-gray-50">
                                ${margin.left.control class="flex justify-center"}
                            </div>
                        </div>
                        <div class="-mx-6 flex justify-between">
                            <div class="flex rounded-md border bg-gray-50">
                                ${padding.left.control class="flex justify-center"}
                            </div>
                            <div class="flex rounded-md border bg-gray-50">
                                ${padding.right.control class="flex justify-center"}
                            </div>
                        </div>
                        <div class="flex flex-col w-fit mx-auto -mb-7">
                            <div class="flex rounded-md border bg-gray-50 mb-1">
                                ${margin.bottom.control class="flex justify-center"}
                            </div>
                            <div class="flex rounded-md border bg-gray-50">
                                ${padding.bottom.control class="flex justify-center"}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </message>
</messages>
